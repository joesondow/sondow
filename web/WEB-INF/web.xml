<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">
    <servlet>
        <servlet-name>ShutUp</servlet-name>
        <jsp-file>/jsp/layout/shutup.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShutUp</servlet-name>
        <url-pattern>/shutup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Tetris</servlet-name>
        <jsp-file>/jsp/layout/tetris.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Tetris</servlet-name>
        <url-pattern>/tetris</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LongDistanceVoterWidget</servlet-name>
        <jsp-file>/jsp/layout/ldv.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LongDistanceVoterWidget</servlet-name>
        <url-pattern>/ldv</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
